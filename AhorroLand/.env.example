# ?? CONFIGURACIÓN DE AHORROLAND - PRODUCCIÓN

# ==================== VERSIONES ====================
API_VERSION=latest
FRONTEND_VERSION=latest

# ==================== ENTORNO ====================
ASPNETCORE_ENVIRONMENT=Production

# ==================== BASE DE DATOS ====================
DB_SERVER=db
DB_PORT=3306
DB_DATABASE=ahorroland
DB_USER=ahorroland_user
DB_PASSWORD=CAMBIAR_PASSWORD_SEGURO_AQUI
DB_ROOT_PASSWORD=CAMBIAR_ROOT_PASSWORD_AQUI

# ==================== JWT ====================
JWT_SECRET_KEY=CAMBIAR-POR-UNA-CLAVE-SEGURA-DE-AL-MENOS-32-CARACTERES-MUY-LARGA-Y-ALEATORIA
JWT_ISSUER=AhorroLand
JWT_AUDIENCE=AhorroLand
JWT_EXPIRATION=720

# ==================== EMAIL BREVO (SENDINBLUE) ====================
# Servidor SMTP de Brevo
EMAIL_SMTP_SERVER=smtp-relay.brevo.com
EMAIL_SMTP_PORT=587
EMAIL_ENABLE_SSL=true

# Credenciales de Brevo (obtener de https://app.brevo.com/settings/keys/smtp)
EMAIL_SMTP_USER=tu_email_de_login@ejemplo.com
EMAIL_SMTP_PASS=tu_smtp_api_key_de_brevo

# Remitente (debe estar verificado en Brevo)
EMAIL_FROM_EMAIL=admin@sergioizq.com
EMAIL_FROM_NAME=AhorroLand

# ==================== REDIS (OPCIONAL) ====================
# Dejar vacío para usar MemoryCache en lugar de Redis
REDIS_CONNECTION=

# Si usas Redis, descomenta y configura:
# REDIS_CONNECTION=redis:6379

# ==================== LOGGING ====================
# Nivel de log: Trace, Debug, Information, Warning, Error, Fatal
LOG_LEVEL=Information

# Para producción, considera usar Warning o Error:
# LOG_LEVEL=Warning

# ==================== NOTAS ====================
# 1. Copiar este archivo como .env: cp .env.example .env
# 2. Configurar todos los valores CAMBIAR_*
# 3. NUNCA commitear el archivo .env al repositorio
# 4. Los logs se guardarán en ./logs/backend/ (7 días de retención)
# 5. Brevo permite hasta 300 emails/día en plan gratuito
